<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Profile Page!</title>
    <style>
      *::-webkit-scrollbar{
        display: none;
      }
    </style>
  </head>
  <body>
<div class="container mt-4">
    <h1 style="display: flex; justify-content: space-between; align-items: flex-end; color: royalblue; flex-wrap: wrap;">Hello, <%=data.username %>
    <div id="btn-ctn">
      <a href="/feed"> <button type="button"  class="btn btn-primary mt-1"> Feed</button></a>
      <a href="/edit/<%= data._id %>"> <button type="button"  class="btn btn-primary mt-1">Edit</button></a>
      <a href="/logout"> <button type="button"  class="btn btn-primary mt-1"> Logout</button></a>
    </div>
    </h1>
    <hr>
    <form action="/post" method="post">
    <h4>Create New Post</h4>
    <div class="form-floating">
        <textarea name="newpost" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
        <label for="floatingTextarea2">Write a post here</label>
      </div>
      <button type="submit" class="btn btn-primary mt-3">Post</button>
      </form>
      <hr>
      <h2>All posts</h2>
      <% data.posts.forEach(function(eachPost){ %>
        <div class="card p-3 mt-2">
            <div class="card-body">
              <h5>Post By - <%= data.username %></h5>
              <h6 style="color: royalblue; display: flex; justify-content:space-between;">
                <%= eachPost.post %>
             <small><%= eachPost.likes.length %></small>
             <a href="/like/<%= eachPost._id %>">Like</a>
          </h6>
          <hr>
          <h6 class="mb-3">Comments</h6>
          <% eachPost.comments.forEach(function(c){%>
            <p><%= c.comment %></p>
          <%})%>
          <form action="/comment/<%= eachPost._id %>" method="post">
             <div class="form-floating mt-3">
                <input name="comment" class="form-control" type="text" placeholder="leave a comment here" id="floatingTextarea">
                <label for="floatingTextarea2">Comment Here Like - 'Nice Pic Deer'</label>
             </div>
          </form>
          </div>
          </div>
        <%})%>
              
</div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
