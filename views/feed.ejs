<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Feed Page!</title>
    <style>
      *::-webkit-scrollbar{
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="container mt-4">
<h2>Feed Page </h2>
<hr>
<h3>All Comments Here</h3>
<hr>
<% saarePosts.forEach(function(eachPost){%>
    <div class="card p-3 mt-2">
        <div class="card-body">
          <h5>Post By - <%=eachPost .username %></h5>
          <h6 style="color: royalblue; display: flex; justify-content:space-between;">
            <%= eachPost.post %>
         <small><%= eachPost.likes.length %></small>
         <a href="/like/<%= eachPost._id %>">Like</a>
         <a href="/delpost/<%= eachPost.id %>">Delete</a>
      </h6>
      <hr>
      
      <h6 class="mb-3">Comments</h6>
      <% eachPost.comments.forEach(function(c){%>
        <p><%= c.comment %></p>
      <%})%>
      <form action="/comment/<%= eachPost._id %>" method="post">
         <div class="form-floating mt-3">
            <input name="comment" class="form-control" type="text" placeholder="leave a comment here" id="floatingTextarea">
            <label for="floatingTextarea2">Comment Here Like - 'Nice Pic Deer'</label>
         </div>
      </form>
    </div>
     </div>
<%})%>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>